<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/accentAColor" />
                    <stroke android:color="@color/secondaryBaseColor" android:width="@dimen/edx_hairline" />
                </shape>

            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#5D82D9" />

                    <corners
                        android:bottomLeftRadius="12dp"
                        android:bottomRightRadius="12dp"
                        android:topLeftRadius="12dp"
                        android:topRightRadius="12dp" />

                </shape>
            </item>
        </selector>
    </item>
    <item android:drawable="@drawable/light_selectable_rounded_box_overlay" />
</layer-list>